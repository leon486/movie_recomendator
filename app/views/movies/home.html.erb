<div class="container-fluid">	
<h4>Formulario de sugestion de pel&iacute;culas:</h4>
<%= form_tag do %>
<!-- <form class="form-inline"> -->
<label for="title">Titulo:</label>
<input type="text" name="title" name="title" class="form-control" maxlength="200" placeholder="Titulo">
<label for="year">A&ntilde;o:</label>
<input type="number" name="year" name="year" min="1900" max='2018' value="2016" class="form-control" placeholder="A&ntilde;o">
<label for="launch_date">Fecha de lanzamiento:</label>
<input type="text" name="launch_date" id="launch" class="form-control" maxlength="200" placeholder="fecha de lanzamiento" readonly="readonly">
<input type="submit" value="Agregar" class="btn btn-primary form-control">
<% end %>
</div>

<br />


<div class="table-responsive container-fluid">
<table class="table table-striped table-hover">
